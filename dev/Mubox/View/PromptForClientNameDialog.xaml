<Window x:Class="Mubox.View.PromptForClientNameDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Enter Client Name" Height="150" Width="391" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Height="28" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90">Client Name</Label>
        <Button IsEnabled="False" Height="23" HorizontalAlignment="Right" Margin="0,0,12,12" Name="buttonOK" VerticalAlignment="Bottom" Width="75" IsDefault="True" Click="buttonOK_Click">O_K</Button>
        <Button Height="23" Margin="0,0,93,12" Name="buttonCancel" VerticalAlignment="Bottom" IsCancel="True" Click="buttonCancel_Click" HorizontalAlignment="Right" Width="75">_Cancel</Button>
        <TextBox Margin="108,12,12,0" Name="textClientName" Height="23" VerticalAlignment="Top" HorizontalContentAlignment="Center" Text="" TextChanged="textClientName_TextChanged" />
        <Label Background="#EEEEEE" Padding="0" Margin="108,41,12,0" Name="labelClientNamePreview" Height="28" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=ClientName}" />
        <Label HorizontalAlignment="Left" Margin="12,41,0,43" Name="label2" Width="90">Safe Name</Label>
    </Grid>
</Window>